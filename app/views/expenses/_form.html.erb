  </div>

  <div class="form-group row">
    <%= f.label :price, class: 'col-2 col-form-label' %>
    <div class="input-group col-10">
      <div class="input-group-addon">â‚¬</div>
      <%= f.number_field :price, placeholder: '10.00', :step => 0.01, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :person, class: 'col-2 col-form-label' %>
